include ../base/head
include ../mixins/style-guilde-block

block variables
    - var pageTitle = 'Dynamic title'

doctype html
html(lang='en')
    head
        +head()
        title= `${pageTitle} - Style Guide`

        block head
        
    body
        div(class='container')
            div(class='o-style-guide')
                div(class='o-style-guide__back')
                    a(class='o-style-guide__back-link' href='style-guide.html')
                        i(class='o-icon o-icon--chevron-left')
                        |  Style Guide
                div(class='o-style-guide__header')
                    img(class='o-style-guide__header__img' src='assets/images/logo.png' alt='logo')

                h1(class='o-style-guide__title')= pageTitle
                div(class='c-style-guide__content')
                    block content
